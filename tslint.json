{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "no-trailing-whitespace": [
      true,
      "ignore-comments",
      "ignore-template-strings"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "quotemark": [
      true,
      "single"
    ]
  },
  "rulesDirectory": []
}